<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jinze.dao.RainDao">
	<resultMap type="com.jinze.entity.Rain" id="RainMapper">
		<id property="ID" column="id"/>
		<result property="siteName" column="siteName"/>
		<result property="Dt" column="Dt"/>
		<result property="RainFall" column="RainFall"/>
	</resultMap>
	
	<!-- 根据站点名称查询所有符合条件的数据 -->
	<select id="selectRainBySiteName" resultMap="RainMapper" parameterType="string">
		select * from tb_rain where siteName = #{siteName}
	</select>
	
</mapper>